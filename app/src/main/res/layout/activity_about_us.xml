<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nitin.desichain.AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us"
        android:gravity="center"
        android:id="@+id/about_us4"
        android:textColor="#FF4500"
        android:layout_margin="10dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:id="@+id/about_us1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C0C0C0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/about_us5"
        android:layout_margin="10dp"
        android:textColor="#FF4500"
        android:text="Disclaimer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:id="@+id/about_us2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C0C0C0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/about_us6"
        android:layout_margin="10dp"
        android:textColor="#FF4500"
        android:text="Copyright"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:id="@+id/about_us3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C0C0C0"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get In Touch"
        android:layout_margin="10dp"
        android:textColor="#FF4500"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getInTouchFb"
            android:layout_margin="5dp"
            android:background="@drawable/fb_cricle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getInTouchGooglePlus"
            android:layout_margin="5dp"
            android:background="@drawable/google_plus_circle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getInTouchTwitter"
            android:layout_margin="5dp"
            android:background="@drawable/twitter_circle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/getInTouchPinterest"
            android:background="@drawable/google_plus_circle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getInTouchYoutube"
            android:layout_margin="5dp"
            android:background="@drawable/google_plus_circle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getInTouchInsta"
            android:layout_margin="5dp"
            android:background="@drawable/insta_circle"
            android:src="@mipmap/ic_drag_handle_black_24dp"
            android:layout_weight="1"/>

    </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
