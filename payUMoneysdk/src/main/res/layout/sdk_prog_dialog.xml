        <ImageView
            android:src="@drawable/nopoint_green"
            android:paddingTop="10dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            />

