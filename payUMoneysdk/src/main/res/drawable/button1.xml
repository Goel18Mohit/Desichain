<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="15dp"
                />
            <gradient
                android:angle="270"
                android:centerX="66%"
                android:centerColor="#C8E7C5"
                android:startColor="#C8E7C5"
                android:endColor="#C8E7C5"
                android:type="linear"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="15dp"
                />
            <gradient
                android:angle="270"
                android:centerX="66%"
                android:centerColor="#76C46E"
                android:startColor="#81C474"
                android:endColor="#6ac451"
                android:type="linear"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
        </shape>
    </item>
</selector>